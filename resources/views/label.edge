<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ data.trackNumber }}</title>
  <style>
    body {
      background: white;
      font-family: Roboto, sans-serif;
    }
    .container {
      width: 1080px;
      height: 1080px;
      background: white;
      padding: 24px;
      box-sizing: border-box;
    }
    .card {
      border-radius: 16px;
      outline: 4px solid black;
      outline-offset: -4px;
      display: flex;
      flex-direction: column;
      height: 1032px;
      width: 1032px;
    }
    /* Header */
    .header {
      padding: 32px;
      border-bottom: 4px solid black;
    }
    .header-title{
      font-weight: 500;
      text-align: center;
      font-size: 32px;
    }
    /* Grid Layout */
    .grid {
      flex: 1;
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-auto-rows: minmax(auto, 1fr);
    }
    /* Default border */
    .box-block {
      padding: 24px 32px;
      display: flex;
      flex-direction: column;
      gap: 16px;
      box-sizing: border-box;
      border: 4px solid black;
      border-width: 0 4px 4px 0; /* kanan + bawah aktif */
    }

    /* Box kanan (Dari) hilang border kanan aja */
    .box-block:nth-child(2n) {
      border-right: 0;
    }

    /* Catatan full width */
    .note {
      grid-column: span 2; /* Catatan selalu full width */
      border-right: 0;
      border-bottom: 0;
    }

    /* Typography */
    .address-title {
      font-size: 24px;
      font-weight: 700;
    }
    .primary-text {
      font-size: 24px;
      font-weight: 500;
    }
    .secondary-text {
      font-size: 24px;
      color: rgba(0, 0, 0, 0.6);
    }
    .address-details {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
    .info-label {
      font-size: 20px;
      font-weight: 700;
    }
    .info-value {
      font-size: 24px;
      color: rgba(0, 0, 0, 0.6);
    }
    .note-title {
      font-size: 20px;
      font-weight: 700;
    }
    .note-text {
      font-size: 24px;
      color: rgba(0, 0, 0, 0.6);
      text-align: justify;
      line-height: 133%;
    }
    .note {
      grid-column: span 2; /* Catatan selalu full width */
      border-right: 0;
      border-bottom: 0;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <!-- Header -->
      <div class="header">
        @if (logo)
          <img src="{{ logo }}" height="48px" alt="">
        @else
          <div class="header-title">
            PT Media Antar Nusa
          </div>
        @end
      </div>

      <!-- Grid -->
      <div class="grid">
        <!-- Box 1: Kepada -->
        <div class="box-block">
          <div class="address-title">Kepada:</div>
          <div class="address-details">
            <div class="primary-text">
              {{ [data.receiverFirstName, data.receiverLastName].filter(Boolean).join(' ') }}
            </div>
            <div class="secondary-text">
              {{ [data.receiverAddress, data.receiverCity].filter(Boolean).join(', ') }}
            </div>
            <div class="secondary-text">
              {{
                [data.receiverProvinces?.name, data.receiverProvinces?.country?.name, data.receiverPostalCode]
                  .filter(Boolean)
                  .join(', ')
              }}
            </div>
            <div class="secondary-text">{{ data.receiverEmail ?? '' }}</div>
            <div class="secondary-text">{{ data.receiverPhone ?? '' }}</div>
          </div>
        </div>

        <!-- Box 2: Dari -->
        <div class="box-block">
          <div class="address-title">Dari:</div>
          <div class="address-details">
            <div class="primary-text">
              {{ [data.senderFirstName, data.senderLastName].filter(Boolean).join(' ') }}
            </div>
            <div class="secondary-text">
              {{ [data.senderAddress, data.senderCity].filter(Boolean).join(', ') }}
            </div>
            <div class="secondary-text">
              {{
                [data.senderProvinces?.name, data.senderProvinces?.country?.name, data.senderPostalCode]
                  .filter(Boolean)
                  .join(', ')
              }}
            </div>
            <div class="secondary-text">{{ data.senderEmail ?? '' }}</div>
            <div class="secondary-text">{{ data.senderPhone ?? '' }}</div>
          </div>
        </div>

        <!-- Box 3 (opsional): Catatan -->
        @if (data.shippingNote)
          <div class="box-block note">
            <div class="note-title">Catatan Pengiriman</div>
            <div class="note-text">
              {{ data.shippingNote }}
            </div>
          </div>
        @end
      </div>
    </div>
  </div>
</body>
</html>
